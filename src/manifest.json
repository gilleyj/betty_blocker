{
  "manifest_version": 2,

  "name": "Navigation Intercepter",
  "description": "This extension helps betty be a better person.",
  "version": "1.0",

  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "permissions": [
    "webRequest", 
    "webRequestBlocking",
    "<all_urls>"
  ]
}
