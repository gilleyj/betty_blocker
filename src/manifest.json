{
  "manifest_version": 2,

  "name": "Betty Blocker",
  "description": "This extension helps Betty be a better person.",
  "version": "1.0",

  "web_accessible_resources": [
    "blocked.html"
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },


  "permissions": [
    "tabs",
    "webRequest", 
    "webRequestBlocking",
    "<all_urls>"
  ]
}
